    <div class="pokeball-calculator">

        <!-- SECCI√ìN SUPERIOR -->
        <div class="top-section">
            <h1>POK√âCALC</h1>

            <div class="input-row">
                <div class="input-group">
                    <label>N√öMERO 1</label>
                    <input type="number" id="numero1">
                </div>

                <div class="input-group">
                    <label>N√öMERO 2</label>
                    <input type="number" id="numero2">
                </div>
            </div>
        </div>

        <!-- BOT√ìN CENTRAL -->
        <div class="center-button"></div>

        <!-- SECCI√ìN INFERIOR -->
        <div class="bottom-section">
            <div class="input-group">
                <label>OPERACI√ìN</label>
                <select id="operacion">
                    <option value="">Elegir...</option>
                    <option value="suma">Suma</option>
                    <option value="resta">Resta</option>
                    <option value="multiplicacion">Multiplicaci√≥n</option>
                    <option value="division">Divisi√≥n</option>
                </select>
            </div>

            <div class="result-box">
                <label>RESULTADO</label>
                <input type="text" id="resultado" readonly>
            </div>
        </div>
    </div>

    <!-- =======================
    L√ìGICA JAVASCRIPT
    ======================== -->
    <script>
        // Obtenemos referencias a los elementos del HTML
        const numero1 = document.getElementById('numero1');
        const numero2 = document.getElementById('numero2');
        const operacion = document.getElementById('operacion');
        const resultado = document.getElementById('resultado');

        // Funci√≥n principal de c√°lculo
        function calcular() {
            // Convertimos los valores de texto a n√∫mero
            const num1 = parseFloat(numero1.value);
            const num2 = parseFloat(numero2.value);

            // Si no son n√∫meros v√°lidos, salimos
            if (isNaN(num1) || isNaN(num2)) {
                resultado.value = '---';
                return;
            }

            let res;

            // Estructura de decisi√≥n
            switch (operacion.value) {
                case 'suma':
                    res = num1 + num2;
                    break;
                case 'resta':
                    res = num1 - num2;
                    break;
                case 'multiplicacion':
                    res = num1 * num2;
                    break;
                case 'division':
                    if (num2 === 0) {
                        resultado.value = 'ERROR';
                        return;
                    }
                    res = num1 / num2;
                    break;
                default:
                    resultado.value = '---';
                    return;
            }

            // Mostramos el resultado con 2 decimales
            resultado.value = res.toFixed(2);
        }

        // Eventos: se ejecuta calcular cuando algo cambia
        numero1.addEventListener('input', calcular);
        numero2.addEventListener('input', calcular);
        operacion.addEventListener('change', calcular);

        /*
        EJERCICIOS PROPUESTOS:
        1Ô∏è‚É£ A√±adir bot√≥n "Calcular"
        2Ô∏è‚É£ A√±adir operaci√≥n potencia
        3Ô∏è‚É£ Mostrar historial de operaciones
        4Ô∏è‚É£ Cambiar colores seg√∫n operaci√≥n
        5Ô∏è‚É£ A√±adir sonidos Pok√©mon üéµ
        */
    </script>
</body>
