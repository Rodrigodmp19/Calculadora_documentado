<body>
    <div class="pokeball-calculator">
        <div class="top-section">
            <h1>POKÉCALC</h1>
            <div class="input-row">
                <div class="input-group">
                    <label>NUM 1</label>
                    <input type="number" id="numero1" placeholder="0">
                </div>
                <div class="input-group">
                    <label>NUM 2</label>
                    <input type="number" id="numero2" placeholder="0">
                </div>
            </div>
            <div class="decoration deco-1">⚡</div>
        </div>
        
        <div class="center-button"></div>
        
        <div class="bottom-section">
            <div class="input-group">
                <label>OPERACIÓN</label>
                <select id="operacion">
                    <option value="">ELEGIR...</option>
                    <option value="suma">➕ SUMA</option>
                    <option value="resta">➖ RESTA</option>
                    <option value="multiplicacion">✖️ MULTI</option>
                    <option value="division">➗ DIVISIÓN</option>
                </select>
            </div>
            
            <div class="result-box">
                <label>RESULTADO</label>
                <input type="text" id="resultado" readonly placeholder="---">
            </div>
            
            <div class="decoration deco-2">✨</div>
        </div>
    </div>

    <script>
        const numero1 = document.getElementById('numero1');
        const numero2 = document.getElementById('numero2');
        const operacion = document.getElementById('operacion');
        const resultado = document.getElementById('resultado');

        function calcular() {
            const num1 = parseFloat(numero1.value);
            const num2 = parseFloat(numero2.value);
            const op = operacion.value;

            if (isNaN(num1) || isNaN(num2)) {
                resultado.value = '---';
                return;
            }

            if (!op) {
                resultado.value = '---';
                return;
            }

            let res;
            switch(op) {
                case 'suma':
                    res = num1 + num2;
                    break;
                case 'resta':
                    res = num1 - num2;
                    break;
                case 'multiplicacion':
                    res = num1 * num2;
                    break;
                case 'division':
                    if (num2 === 0) {
                        resultado.value = 'ERROR!';
                        return;
                    }
                    res = num1 / num2;
                    break;
            }

            resultado.value = res.toFixed(2);
        }

        numero1.addEventListener('input', calcular);
        numero2.addEventListener('input', calcular);
        operacion.addEventListener('change', calcular);
    </script>
